{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "string_limit": {
            "maxLength": 1000
        },
        "id": {
            "maxLength": 1000,
            "pattern": "^[a-z0-9+]+(_[a-z0-9+]+)*$"
        },
        "logo": {
            "pattern": "^logo\\.(png|jpg|svg)$"
        }
    },
    "properties": {
        "id": {
            "type": "string",
            "description": "The ID for this store",
            "$ref": "#/definitions/id"
        },
        "name": {
            "type": "string",
            "description": "The name of this store",
            "$ref": "#/definitions/string_limit"
        },
        "storefront_url": {
            "type": "string",
            "description": "A link to the storefront of this store",
            "$ref": "#/definitions/string_limit"
        },
        "logo": {
            "type": "string",
            "description": "The name of the logo file",
            "$ref": "#/definitions/logo"
        },
        "ships_from": {
            "type": [
                "array",
                "string"
            ],
            "description": "A list of locations the shop linked ships from",
            "items": {
                "type": "string",
                "$ref": "#/definitions/string_limit"
            },
            "$ref": "#/definitions/string_limit"
        },
        "ships_to": {
            "type": [
                "array",
                "string"
            ],
            "description": "A list of locations the shop linked ships to",
            "items": {
                "type": "string",
                "$ref": "#/definitions/string_limit"
            },
            "$ref": "#/definitions/string_limit"
        },
        "source": {
            "type": "string",
            "description": "The source of the data, like another DB or company",
            "$ref": "#/definitions/string_limit"
        }
    },
    "required": [
        "id",
        "name",
        "storefront_url",
        "logo",
        "ships_from",
        "ships_to"
    ]
}