{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "string_limit": {
            "maxLength": 1000
        },
        "country_code": {
            "pattern": "^(([A-Z]{2})|Unknown)$"
        },
        "id": {
            "pattern": "^[a-z0-9]+(_[a-z0-9]+)*$",
            "maxLength": 50
        }
    },
    "properties": {
        "id": {
            "type": "string",
            "description": "The unique identifier for the filament manufacturer",
            "$ref": "#/definitions/id"
        },
        "brand": {
            "type": "string",
            "description": "The name of the filament manufacturer",
            "$ref": "#/definitions/string_limit"
        },
        "website": {
            "type": "string",
            "description": "The website of the filament manufacturer",
            "$ref": "#/definitions/string_limit"
        },
        "logo": {
            "type": "string",
            "description": "A link to the logo for this brand",
            "$ref": "#/definitions/string_limit"
        },
        "origin": {
            "type": "string",
            "description": "The country of origin",
            "$ref": "#/definitions/country_code"
        }
    },
    "required": [
        "id",
        "brand",
        "logo",
        "website",
        "origin"
    ],
    "additionalProperties": false
}
